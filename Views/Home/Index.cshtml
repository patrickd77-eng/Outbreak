@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center true-center text-light">


    <h1 class="display-4 mb-4">Outbreak</h1>
    <div class="row">

        <div class="col-12 text-center mx-auto">

            <p class="form-text">Select a virus</p>
            <form method="POST" asp-action="Results" asp-controller="Home">
                <select id="searchTerm" name="searchTerm">


                    @foreach (var item in Model)
                    {
                        <option>
                            @item
                        </option>



                    }
                </select>

                <button type="submit" class="btn btn-success">Search</button>
            </form>
        </div>



    </div>

</div>
